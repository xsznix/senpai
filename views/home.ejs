<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Senpai</title>
	<link rel="stylesheet" href="/static/index.css">
</head>
<body>
	<nav>
		<div id="logo">senpai</div>
		<div class="spacer">
		</div>
		<a href="#">About</a>
		<a href="#">Contact</a>
		<a href="/logout">Logout</a>
	</nav>

	<div class="layer">
		<div class="layer-inner">
			<h1>Your Email Subscriptions</h1>
			<ul id="lists"></ul>
		</div>
	</div>

	<script type="text/template" id="list-item">
	<b><%- sender_name %></b>&ensp;
	<i><%- sender_email %></i>
	<ul class="emails">
		<% _.each(emails, function (email) { %>
			<li><%= email.subject %> <span class="right"><%= moment(email.date * 1000).format('MMM D, YYYY') %></span></li>
		<% }) %>
	</ul>
	<a href="<%= unsub_link.split(',').map(function (link) {
				link = link.match(/^\s*(.*)\s*$/)[1];
				if (link[0] === '<')
					return link.substring(1, link.length - 2);
				else
					return link;
			}) %>" class="unsub" target="_blank">Unsubscribe</a>
	</script>

	<script src="/lib/jquery/dist/jquery.min.js"></script>
	<script src="/lib/underscore/underscore-min.js"></script>
	<script src="/lib/backbone/backbone-min.js"></script>
	<script src="/lib/moment/min/moment.min.js"></script>
	<script src="/static/home.js"></script>
</body>
</html>